
<Controller>:
    label_wid: my_custom_label
    pagenum: pagenum
    
    FloatLayout:

        
         
        
        Label:
            id: my_custom_label
            text: root.label
            text_size:self.size
            halign:'justify'
            valign:'top'
            pos_hint: {"x":.10,"y":.30}
            size_hint: (.80,.60)
            
        Button:
            text: 'Last'
            on_press: root.last_page()
            pos_hint: {"x":0.2,"y":0.1}
            size_hint: 0.1,0.1
            color: 1,0,0,1
            font_size: 20
        Button:
            text: 'Next'
            on_press: root.next_page()
            pos_hint: {"x":0.3,"y":0.1}
            size_hint: 0.1,0.1
            color: 1,0,0,1
            font_size: 20
        Button:
            text: 'Page'
            on_press: root.page()
            pos_hint: {"x":0.4,"y":0.1}
            size_hint: 0.1,0.1
            color: 1,0,0,1
            font_size: 20
        TextInput:
            id: pagenum
            hint_text: str(root.m + 1)
            text: str(root.m + 1)
            multiline:False
            pos_hint: {"x":0.5,"y":0.1}
            size_hint: 0.1,0.1
            font_size: 20
            
            