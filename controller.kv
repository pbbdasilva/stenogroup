
<Controller>:
    label_wid: my_custom_label
    pagenum: pagenum

    FloatLayout:
       
        
         
        
        Label:
            id: my_custom_label
            text: root.label
            text_size:self.size
            halign:'justify'
            valign:'center'
            pos_hint: {"x":.10,"y":.30}
            size_hint: (.80,.60)
            color: 0,0,0,1
            font_size: 15.5
            font_name: '/home/bernard/Documents/IME/2 ano/IPE 2/App/stenogroup/alexandria/AlexandriaFLF-Bold.ttf'
        Button:
            text: 'Last'
            on_press: root.last_page()
            pos_hint: {"x":0.36,"y":0.1}
            size_hint: 0.1,0.1
            color: 0,0,0,1
            background_color: 1, 0, 1, 0.6
            font_size: 20
        Button:
            text: 'Next'
            on_press: root.next_page()
            pos_hint: {"x":0.48,"y":0.1}
            size_hint: 0.1,0.1
            color: 0,0,0,1
            background_color: 1, 0, 1, 0.6
            font_size: 20
        Button:
            text: 'Page'
            on_press: root.page()
            pos_hint: {"x":0.8,"y":0.01}
            size_hint: 0.1,0.1
            color: 0,0,0,1
            font_size: 20
            background_color: 1, 0, 1, 0.6
        TextInput:
            id: pagenum
            hint_text: str(root.m + 1)
            text: str(root.m + 1)
            multiline:False
            pos_hint: {"x":0.9,"y":0.012}
            size_hint: 0.09,0.097
            font_size: 20
            