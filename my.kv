<LoginWindow>:
    name: "login"

    email: email

    FloatLayout:

        Image:
            source: 'imagens/logo.png'
            size_hint: 0.2,0.5
            pos_hint: {"top":1,"x":0.1}
        Label:
            text: "Steno Share"
            font_size: (root.width**2 + root.height**2) / 11**4
            size_hint: 0.2,0.5
            pos_hint: {"top":1,"x":0.5}
        Label:
            text:"Login: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0, "top":0.5}
            size_hint: 0.35, 0.15
            canvas.before:
        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.35 , "top":0.5}
            size_hint: 0.5, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Entrar"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()


<MainWindow>:
    FloatLayout:
        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"