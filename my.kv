<LoginWindow>:
    name: "login"

    email: email

    FloatLayout:
        canvas:
            Color:
                rgb: 0.5, 0.1, 0.5
            Rectangle:
                size: self.size
        Image:
            source: 'logo/logo.png'
            size_hint: 0.2,0.5
            pos_hint: {"top":1,"x":0.1}
        Label:
            text: "Steno Share"
            font_size: (root.width**2 + root.height**2) / 11**4
            size_hint: 0.2,0.5
            pos_hint: {"top":1,"x":0.5}
        Label:
            text:"Login: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0, "top":0.5}
            size_hint: 0.35, 0.15
            canvas.before:
        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 12**4
            multiline: False
            pos_hint: {"x": 0.35 , "top":0.5}
            size_hint: 0.5, 0.12

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Entrar"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()
                app.root.get_screen('main').VerLivros()


<Biblioteca>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
        ScrollView:
            BoxLayout:
                padding: 150
                spacing: 50
                id: box
                orientation: 'vertical'
                size_hint_y:None
                height: self.minimum_height

        FloatLayout:
            ActionBar:
                pos_hint:{'top':1}
                ActionView:
                    ActionPrevious:
                        title: 'Biblioteca'
                        on_release:
                            app.root.current = 'login'
                            app.root.get_screen('main').RemoverLivros()
                    ActionButton:
                        text: 'Fechar App'
                        on_release: app.stop()

<Texto>:

    FloatLayout:
        ActionBar:
            pos_hint:{'top':1}
            ActionView:
                ActionPrevious:
                    title: 'Livro'
                    on_release:
                        app.root.current = 'main'
                ActionButton:
                    text: 'Sair'
                    on_release:
                        app.root.current = 'login'
                        app.root.get_screen('main').RemoverLivros()



<ImageButton>:
    id:image
    size_hint_y:None
    height: 300
    on_release:
        app.root.current = "tex"
        print(image.source)
